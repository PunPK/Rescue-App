#:import utils kivy.utils
#:import MapView kivy_garden.mapview.MapView

<LoginScreen>:
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#023282')
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 40]
        spacing: 20

        Image:
            source: 'Image/logo.png'
            size_hint: (None, None)
            size: (120, 120)
            pos_hint: {'center_x': 0.5}

        Label:
            text: 'Rescue App'
            font_name: 'ThaiFont'
            font_size: '28sp'
            color: 1, 1, 1, 1
            size_hint_y: None
            height: self.texture_size[1]

        BoxLayout:
            orientation: 'vertical'
            padding: 15
            spacing: 15
            size_hint_y: None
            height: self.minimum_height
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15]

            TextInput:
                id: username_input
                hint_text: 'ชื่อผู้ใช้'
                font_name: 'ThaiFont'
                size_hint_y: None
                height: '45dp'
                multiline: False
                background_color: 0, 0, 0, 0
                padding: [10, 10, 10, 10]

            TextInput:
                id: password_input
                hint_text: 'รหัสผ่าน'
                font_name: 'ThaiFont'
                password: True
                size_hint_y: None
                height: '45dp'
                multiline: False
                background_color: 0, 0, 0, 0
                padding: [10, 10, 10, 10]

            Button:
                text: 'เข้าสู่ระบบ'
                font_name: 'ThaiFont'
                size_hint_y: None
                height: '50dp'
                background_color: utils.get_color_from_hex('#023282')
                color: 1, 1, 1, 1
                on_press: root.login()
<UserScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('#FFFFFF')
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [20,]

