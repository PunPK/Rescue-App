                        size_hint: (None, None)
                        size: (60, 60)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                
                # Fire Rescue Button
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: None
                    width: '100dp'
                    canvas.before:
