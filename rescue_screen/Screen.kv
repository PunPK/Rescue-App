                    orientation: 'vertical'
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex('#FF5733')
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15, 15, 15, 15]
                    
                    Image:
                        source: 'emergency_icon.png'  # Replace with your icon
                        size_hint: (None, None)
                        size: (60, 60)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    
                    Label:
                        text: 'Emergency\\nContact'
                        font_name: 'Roboto'
                        font_size: '14sp'
                        color: 1, 1, 1, 1
                        halign: 'center'
                        valign: 'top'
                        text_size: self.width, None
                        size_hint_y: None
                        height: '40dp'
                        pos_hint: {'center_x': 0.5}

                # Ambulance Button
                BoxLayout:
                    orientation: 'vertical'
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex('#FF5733')
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15, 15, 15, 15]
                    
                    Image:
                        source: 'ambulance_icon.png'  # Replace with your icon
                        size_hint: (None, None)
                        size: (60, 60)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    
                    Label:
                        text: 'Ambulance'
                        font_name: 'Roboto'
                        font_size: '14sp'
                        color: 1, 1, 1, 1
                        halign: 'center'
                        valign: 'top'
                        text_size: self.width, None
                        size_hint_y: None
                        height: '40dp'
                        pos_hint: {'center_x': 0.5}

                # News Button
                BoxLayout:
                    orientation: 'vertical'
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex('#FF5733')
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15, 15, 15, 15]
                    
                    Image:
                        source: 'news_icon.png'  # Replace with your icon
                        size_hint: (None, None)
                        size: (60, 60)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    
                    Label:
                        text: 'News'
                        font_name: 'Roboto'
                        font_size: '14sp'
                        color: 1, 1, 1, 1
                        halign: 'center'
                        valign: 'top'
                        text_size: self.width, None
                        size_hint_y: None
                        height: '40dp'
                        pos_hint: {'center_x': 0.5}

                # Safety Tips Button
                BoxLayout:
                    orientation: 'vertical'
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex('#FF5733')
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15, 15, 15, 15]
                    
                    Image:
                        source: 'safety_icon.png'  # Replace with your icon
                        size_hint: (None, None)
                        size: (60, 60)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    
                    Label:
                        text: 'Safety Tips'
                        font_name: 'Roboto'
                        font_size: '14sp'
                        color: 1, 1, 1, 1
                        halign: 'center'
                        valign: 'top'
                        text_size: self.width, None
                        size_hint_y: None
                        height: '40dp'
                        pos_hint: {'center_x': 0.5}

                # Bookmarks Button
