#:import utils kivy.utils
#:import MapView kivy_garden.mapview.MapView

<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('#023282')
            Rectangle:
                pos: self.pos
                size: self.size
        
        BoxLayout:
            orientation: 'vertical'
            padding: [20, 40]
            spacing: 20

            Image:
                source: 'Image/logo.png'
                size_hint: (None, None)
                size: (120, 120)
                pos_hint: {'center_x': 0.5}

            Label:
                text: 'Rescue App'
                font_name: 'ThaiFont'
                font_size: '28sp'
                color: 1, 1, 1, 1
                size_hint_y: None
                height: self.texture_size[1]

            BoxLayout:
                orientation: 'vertical'
                padding: 15
                spacing: 15
                size_hint_y: None
                height: self.minimum_height
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15]

                TextInput:
                    id: username_input
                    hint_text: 'ชื่อผู้ใช้'
                    font_name: 'ThaiFont'
                    size_hint_y: None
                    height: '45dp'
                    multiline: False
                    background_color: 0, 0, 0, 0
                    padding: [10, 10, 10, 10]

                TextInput:
                    id: password_input
                    hint_text: 'รหัสผ่าน'
                    font_name: 'ThaiFont'
                    password: True
                    size_hint_y: None
                    height: '45dp'
                    multiline: False
                    background_color: 0, 0, 0, 0
                    padding: [10, 10, 10, 10]

                Button:
                    text: 'เข้าสู่ระบบ'
                    font_name: 'ThaiFont'
                    size_hint_y: None
                    height: '50dp'
                    background_color: utils.get_color_from_hex('#023282')
                    color: 1, 1, 1, 1
                    on_press: root.login()

            Button:
                text: 'Register new account'
                font_name: 'ThaiFont'  # Use the custom font
                font_size: '28sp'      # Set font size
                color: 1, 1, 1, 1      # Text color (white)
                size_hint_y: None      # Disable vertical size hint
                height: dp(50)         # Set fixed height
                background_color: 0.1, 0.4, 0.9, 1  # Background color (blue)
                on_press: root.register() 

        MDBoxLayout:
            adaptive_height: True
            md_bg_color: (1, 1, 1, 1)
            padding: [0, dp(5), 0, dp(5)]
            spacing: dp(10)

            BottomNavItem:
                icon: "compass-outline"
                text: "Explore"
                screen_name: "main"

            BottomNavItem:
                icon: "file-document-outline"
                text: "Reports"
                screen_name: "receiver"

            BottomNavItem:
                icon: "account-box-multiple"
                text: "Officer"
                screen_name: "officer"

            BottomNavItem:
                icon: "account-outline"
                selected: True
                text: "Login"
                screen_name: "login"

<UserScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('#FFFFFF')
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [20,]

        BoxLayout:
            size_hint_y: None
            height: '140dp'
            padding: [10, 10]
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#023282')
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20,]

            BoxLayout:
                orientation: 'vertical'
                padding: [0, 10]

                Image:
                    source: 'Image/logo.png'
                    size_hint: (None, None)
                    size: (80, 80)
                    pos_hint: {'center_x': 0.5}

                Label:
                    text: 'Rescue App'
                    font_name: 'Roboto'
                    font_size: '24sp'
                    color: 1, 1, 1, 1
                    size_hint_y: None
                    height: '30dp'
                    pos_hint: {'center_x': 0.5}

