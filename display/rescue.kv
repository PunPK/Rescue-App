#:import utils kivy.utils

<LoginScreen>:
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#023282')
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 40]
        spacing: 20

        Image:
            source: '../Image/logo.png'  # Add your M-Help Me logo
            size_hint: (None, None)
            size: (120, 120)
            pos_hint: {'center_x': 0.5}

        Label:
            text: 'Rescue App'
            font_name: 'ThaiFont'
            font_size: '28sp'
            color: 1, 1, 1, 1
            size_hint_y: None
            height: self.texture_size[1]

        BoxLayout:
            orientation: 'vertical'
            padding: 15
            spacing: 15
            size_hint_y: None
            height: self.minimum_height
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15]

            TextInput:
                id: username_input
                hint_text: 'ชื่อผู้ใช้'
                font_name: 'ThaiFont'
                size_hint_y: None
                height: '45dp'
                multiline: False
                background_color: 0, 0, 0, 0
                padding: [10, 10, 10, 10]

            TextInput:
                id: password_input
                hint_text: 'รหัสผ่าน'
                font_name: 'ThaiFont'
                password: True
                size_hint_y: None
                height: '45dp'
                multiline: False
                background_color: 0, 0, 0, 0
                padding: [10, 10, 10, 10]

            Button:
                text: 'เข้าสู่ระบบ'
                font_name: 'ThaiFont'
                size_hint_y: None
                height: '50dp'
                background_color: utils.get_color_from_hex('#E91E63')
                color: 1, 1, 1, 1
                on_press: root.login()

<UserScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('#F5F5F5')  # Light gray background
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint_y: None
            height: '60dp'
            padding: [10, 0]
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#E91E63')
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: 'แจ้งเหตุฉุกเฉิน'
                font_name: 'ThaiFont'
                font_size: '20sp'
                color: 1, 1, 1, 1

        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: [15, 15]
                spacing: 15

                # Service Categories
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '100dp'
                    spacing: 10

                    # Add service category buttons with icons
                    Button:
                        background_normal: ''
                        background_color: 1, 1, 1, 1
                        size_hint_x: 0.25
                        Image:
                            source: 'emergency_icon.png'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y + 10
                        Label:
                            text: 'ฉุกเฉิน'
                            font_name: 'ThaiFont'
                            color: 0, 0, 0, 1
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y - 20

                    # Add more category buttons similarly

        # Bottom Navigation Bar
        BoxLayout:
            size_hint_y: None
            height: '60dp'
            padding: [10, 5]
            spacing: 10
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                background_normal: 'home_icon.png'
                size_hint_x: 0.2
            Button:
                background_normal: 'report_icon.png'
                size_hint_x: 0.2
            Button:
                background_normal: 'notification_icon.png'
                size_hint_x: 0.2
            Button:
                background_normal: 'profile_icon.png'
                size_hint_x: 0.2