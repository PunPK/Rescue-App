<ReceiverScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('#F5F5F5')  # Light gray background
            Rectangle:
                pos: self.pos
                size: self.size

        # Header
        BoxLayout:
            size_hint_y: None
            height: '60dp'
            padding: [10, 0]
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#023282')  # Pink header
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                source: 'Image/logo.png'
                size_hint: (None, None)
                size: (50, 50)
                pos_hint: {'center_x': 0.5,'center_y':0.5}

            # Button:
            #     size_hint_x: None
            #     width: '40dp'
            #     background_normal: 'Image/logo.png' # Add back arrow icon
            #     on_press: root.manager.current = 'user'

            Label:
                text: 'รายงานเหตุการณ์'
                font_name: 'ThaiFont'
                font_size: '20sp'
                color: 1, 1, 1, 1
                halign: 'left'
                text_size: self.size
                valign: 'center'
                padding_x: 10

        # Content
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: [15, 20]
                spacing: 15

                # Location Input
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '80dp'
                    
                    Label:
                        text: 'สถานที่'
                        font_name: 'ThaiFont'
                        color: 0, 0, 0, 0.8
                        size_hint_y: None
                        height: '20dp'
                        halign: 'left'
                        text_size: self.size

                    BoxLayout:
                        size_hint_y: None
                        height: '50dp'
                        padding: [5, 5]
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [8]

                        TextInput:
                            id: location_input
                            hint_text: 'ระบุสถานที่เกิดเหตุ'
                            font_name: 'ThaiFont'
                            multiline: False
                            background_color: 0, 0, 0, 0
                            padding: [10, 10, 10, 0]

                # Description Input
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '150dp'
                    
                    Label:
                        text: 'รายละเอียด'
                        font_name: 'ThaiFont'
                        color: 0, 0, 0, 0.8
                        size_hint_y: None
                        height: '20dp'
                        halign: 'left'
                        text_size: self.size

                    BoxLayout:
                        size_hint_y: None
                        height: '120dp'
                        padding: [5, 5]
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [8]

                        TextInput:
                            id: description_input
                            hint_text: 'อธิบายรายละเอียดเหตุการณ์'
                            font_name: 'ThaiFont'
                            multiline: True
                            background_color: 0, 0, 0, 0
                            padding: [10, 10, 10, 0]

                BoxLayout:
                    id: map_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '300dp'
                    spacing: 10
                    
                Button:
                    id: open_cam_button
                    text: 'เปิดกล้อง'
                    font_name: 'ThaiFont'
                    size_hint_y: None
                    height: '50dp'
                    background_normal: ''
                    background_color: utils.get_color_from_hex('#F5F5F5')
                    color: utils.get_color_from_hex('#023282')
                    on_press: root.setup_camera()
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex('#023282')
                        Line:
                            width: 1.5
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 8)

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '300dp'
                    BoxLayout:
                        id: cam_container
                        orientation: 'vertical'
                        size_hint_y: None
                        height: '300dp'
                    Button:
                        text: 'ถ่ายรูปภาพ'
                        font_name: 'ThaiFont'
                        size_hint_y: None
                        height: '50dp'
                        background_normal: ''
                        background_color: utils.get_color_from_hex('#F5F5F5')
                        color: utils.get_color_from_hex('#023282')
                        on_press: root.capture_photo()
                        canvas.before:
                            Color:
                                rgba: utils.get_color_from_hex('#023282')
                            Line:
                                width: 1.5
                                rounded_rectangle: (self.x, self.y, self.width, self.height, 8)

                BoxLayout:
                    id: photo_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '300dp'
                    opacity: 0

                Button:
                    text: 'ส่งรายงาน'
                    font_name: 'ThaiFont'
                    size_hint_y: None
                    height: '50dp'
                    background_normal: ''
                    background_color: utils.get_color_from_hex('#023282')
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex('#023282')
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [8]
                    on_press: root.send_report()

        MDBoxLayout:
            adaptive_height: True
            md_bg_color: (1, 1, 1, 1)
            padding: [0, dp(5), 0, dp(5)]
            spacing: dp(10)

            BottomNavItem:
                icon: "compass-outline"
                text: "Explore"
                screen_name: "main"

            BottomNavItem:
                icon: "file-document-outline"
                selected: True
                text: "Reports"
                screen_name: "receiver"

            BottomNavItem:
                icon: "account-box-multiple"
                text: "Officer"
                screen_name: "officer"

            BottomNavItem:
                icon: "account-outline"
                text: "Login"
                screen_name: "login"

<ReportList>:
    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
