                            rgba: utils.get_color_from_hex('#FF8C00')
                        Ellipse:
                            pos: self.pos
                            size: self.size
                    
                    Image:
                        source: 'fire_rescue_icon.png'  # Replace with your icon
                        size_hint: (None, None)
                        size: (60, 60)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        # Bottom Navigation Bar
        BoxLayout:
            size_hint_y: None
            height: '60dp'
            padding: [10, 5]
            spacing: 10
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: 'vertical'
                Image:
                    source: 'explore_icon.png'  # Replace with your icon
                    size_hint: (None, None)
                    size: (30, 30)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                Label:
                    text: 'Explore'
                    font_name: 'Roboto'
                    font_size: '12sp'
                    color: utils.get_color_from_hex('#FF8C00')
                    size_hint_y: None
                    height: '20dp'
                    pos_hint: {'center_x': 0.5}
                    
            BoxLayout:
                orientation: 'vertical'
                Image:
                    source: 'list_icon.png'  # Replace with your icon
                    size_hint: (None, None)
                    size: (30, 30)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                    
            BoxLayout:
                orientation: 'vertical'
                Image:
                    source: 'officer_icon.png'  # Replace with your icon
                    size_hint: (None, None)
                    size: (30, 30)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                    
            BoxLayout:
                orientation: 'vertical'
                Image:
                    source: 'profile_icon.png'  # Replace with your icon
                    size_hint: (None, None)
